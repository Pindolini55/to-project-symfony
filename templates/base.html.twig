{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Symfony Shop{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
        {# Możesz tu podpiąć również swój plik CSS, np. <link rel="stylesheet" href="{{ asset('build/app.css') }}"> #}

        <style>
            /* Przykładowe style, by zbliżyć się do designu */
            body {
                font-family: Arial, sans-serif;
                color: #333;
                margin: 0;
                padding: 0;
            }
            .navbar {
                background-color: #0E3F35; /* ciemnozielony background, zmodyfikuj wg potrzeb */
            }
            .navbar-brand, .nav-link {
                color: #fff !important;
            }
            .nav-link:hover {
                color: #ddd !important;
            }
            footer {
                background-color: #0E3F35;
                color: #fff;
                padding: 20px 0;
            }
        </style>

    {% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg">
    <div class="container">
        <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">Symfony Shop</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="text-light">Menu</span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_products_list') }}">Produkty</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_cart_show') }}">Koszyk</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

{# Główna zawartość strony #}
{% block body %}{% endblock %}

<footer class="mt-5">
    <div class="container text-center">
        <p class="mb-0">© 2025 Symfony Shop - All rights reserved.</p>
    </div>
</footer>

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
</body>
</html>
