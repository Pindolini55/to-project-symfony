{# templates/product/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Lista produktów{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container">
            <h1 class="mb-4 fw-bold">Nasze produkty</h1>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="{{ product.imageUrl }}" class="card-img-top" alt="{{ product.name }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <p class="card-text">
                                    Cena: <strong>{{ product.price }} PLN</strong><br>
                                    <small class="text-muted">Ocena: {{ product.rating|default(4.5) }}★</small>
                                </p>
                                <div class="d-grid">
                                    <a href="{{ path('app_products_show', { id: product.id }) }}" class="btn btn-info mb-2">Szczegóły</a>
                                    <button class="btn btn-success">Dodaj do koszyka</button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
