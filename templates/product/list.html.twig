{# templates/product/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Lista produktów{% endblock %}

{% block body %}
    <h1>Nasze produkty</h1>
    <div class="row">
        {% for product in products %}
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">Cena: {{ product.price }} PLN</p>
                        <a href="{{ path('app_products_show', { id: product.id }) }}" class="btn btn-info">Szczegóły</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
