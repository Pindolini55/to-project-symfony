{% extends 'base.html.twig' %}

{% block title %}SymfonyShop{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Verdana, sans-serif;
            color: #333;
        }

        /* ------------------------ NAVBAR ------------------------ */
        .custom-navbar {
            background-color: #023430; /* ciemna ziele≈Ñ */
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 2rem;
        }
        .custom-navbar .logo {
            color: #fff;
            font-size: 1.5rem;
            font-weight: 700;
            text-decoration: none;
        }
        .custom-navbar .logo:hover {
            transform: scale(1.02);
        }
        .custom-navbar ul {
            list-style: none;
            display: flex;
            gap: 2rem;
        }
        .custom-navbar li {
            display: inline-block;
        }
        .custom-navbar a {
            color: #000000;
            text-decoration: none;
            font-weight: 500;
        }
        .custom-navbar a:hover {
            color: #878787;
            text-decoration: underline;
        }

        /* ------------------------ POPULAR PRODUCTS ------------------------ */
        .section {
            max-width: 1200px;
            margin: 0 auto;
            padding: 3rem 2rem;
        }
        .section h2 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }
        .section-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 2rem;
        }
        .product-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 30px
        }
        .section-header a {
            text-decoration: none;
            color: #0B4D3A;
            font-weight: 600;
        }
        .product-card {
            background-color: #f1f1f1;
            border: 0;
            /*border: 1px solid #eee;*/
            border-radius: 15px;
            padding: 0 0 15px 0;
            max-width: 350px;
            text-align: center;
        }
        .product-card img {
            width: 60%;
            height: auto;
            margin-bottom: 1rem;
            border-radius: 15px;
        }
        .product-name {
            margin-top: 10px;
            font-weight: 600;
            font-size: 1.15rem;
            margin-bottom: 0.5rem;
        }
        .product-colors {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }
        .product-color {
            font-size: 0.9rem;
            color: #777;
            margin-bottom: 0.5rem;
            border-radius: 2px;
            width: 25px;
            height: 25px;
        }
        .product-price {
            font-size: 1.15rem;
            margin-top: 0.5rem;
            margin-left: 1.35rem;
            font-weight: bold;
            letter-spacing: -0.05rem;
        }
        .product-rating {
            font-size: 0.95rem;
            color: black;
            font-weight: bold;
            margin-top: 0.6rem;
            margin-left: 1.05rem;
        }
        .add-to-cart-btn {
            background-color: #f1f1f1;
            color: black;
            border: 2px solid black;
            padding: 0.20rem 0.6rem;
            margin-top: 0.35rem;
            font-size: 0.9rem;
            border-radius: 55px;
            cursor: pointer;
            font-weight: bold;
            margin-left: auto;
            margin-right: 0.5rem;
        }
        .explore-more-button {
            background-color: #ffffff;
            color: black !important;
            border: 2px solid black;
            padding: 0.35rem 1.25rem;
            border-radius: 25px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: bold;
        }
        .explore-more-button a {
            text-decoration: none;
            color: black !important;
        }
        .explore-more-button:hover {
            background-color: #efefef;
            transform: scale(1.01);
            transition: transform 0.55s ease;
        }
        .add-to-cart-btn:hover {
            background-color: #dcdcdc;
        }

        /* ------------------------ BEST SHOES COLLECTION ------------------------ */
        .best-shoes-section {
            background-color: #f8f8f8;
        }

        .header-container {
            background-color: #023430;
            width: 100%;
            height: 40%;
        }

        .bar-container {
            margin-top: 15px;
            background-color: #e3e3e3;
            padding: 16px 20px 16px 20px;
            border-radius: 25px;
        }
        .bar-container-text {
            color: black;
            font-weight: bold;
            font-size: 16px;
        }
        .bar-container-text i {
            font-size: 24px;
        }
        .bar-container-icons {
            margin-top: 10px;
            background-color: #e3e3e3;
            padding: 8px 16px 8px 16px;
            border-radius: 25px;
            margin-right: 30px
        }
        .header-image-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 60%;
            border-radius: 30px;
            padding-bottom: 50px;
            margin-top: 20px;
            margin-left: 60px;
        }
        .header-image-container img {
            width: 65%;
            border-radius: 25px;
            max-height: 555px;
        }
        .header-image-container img:hover {
            transform: scale(1.02);
            transition: transform 0.55s ease;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- NAVBAR -->
    <div class="header-container">
        <nav class="custom-navbar">
            <a href="#" class="logo"><img width="14%" style="margin-right: 10px; margin-bottom: 5px;" src="{{ asset('images/SymfonyIcon.png') }}" alt="HomePageTopImage">SymfonyShop</a>
            <ul class="bar-container">
                <li class="bar-container-text">
                    <a href="#">Home</a>
                </li>
                <li class="bar-container-text">
                    <a href="#">About</a>
                </li>
                <li class="bar-container-text">
                    <a href="#">Shoes Collection</a>
                </li>
                <li class="bar-container-text">
                    <a href="#">Shop</a>
                </li>
                <li class="bar-container-text">
                    <a href="#">FAQ</a>
                </li>
            </ul>
            <ul class="bar-container-icons">
                <li class="bar-container-text">
                    <a href="#"><i class="mdi mdi-magnify"></i></a>
                </li>
                <li class="bar-container-text">
                    <a href="#"><i class="mdi mdi-heart-outline"></i></a>
                </li>
                <li class="bar-container-text">
                    <a href="#"><i class="mdi mdi-cart-outline"></i></a>
                </li>
                <li class="bar-container-text">
                    <a href="#"><i class="mdi mdi-account-circle"></i></a>
                </li>
            </ul>
        </nav>
        <div class="header-image-container">
            <img src="{{ asset('images/HomePageTopImage.png') }}" alt="HomePageTopImage">
        </div>

    </div>

    <!-- OUR POPULAR PRODUCTS -->
    <section class="section">
        <div class="section-header">
            <h2>Our Popular Products</h2>
            <button class="explore-more-button"><a href="#">Explore More</a><i style="margin-left: 0.55rem; font-size: 1.45rem;" class="mdi mdi-arrow-right"></i></button>
        </div>
        <div class="product-cards">
            {% for product in popularProducts %}
                <div class="product-card">
                    <div class="product-name">{{ product.name }}</div>
                    {% if product.imageUrl is not null %}
                        <img src="{{ asset(product.imageUrl) }}" alt="{{ product.name }}">
                    {% else %}
                        <img src="{{ asset('images/defaultImage.png') }}" alt="Default Product Image">
                    {% endif %}
                    {% if product.colors %}
                        <div class="product-colors">
                            {% for color in product.colors %}
                                <div class="product-color" style="background-color: {{ color }}">
                                    &nbsp;
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                    <div style="display: flex;">
                        <span class="product-price">${{ product.price }}</span>
                        <div class="product-rating"><i style="color: #FFB400; margin-right: 2px;" class="mdi mdi-star"></i>{{ product.rating }}</div>
                        <button class="add-to-cart-btn">Add to Cart</button>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
