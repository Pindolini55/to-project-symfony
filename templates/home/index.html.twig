{% extends 'base.html.twig' %}

{% block title %}Catalog - Home{% endblock %}

{# Jeśli korzystasz z bloku stylesheets w base.html.twig,
   możesz dodać poniższe style w nim lub w osobnym pliku CSS. #}
{% block stylesheets %}
    {{ parent() }}
    <style>
        /* RESET PODSTAWOWYCH MARGINESÓW/PADDINGÓW (opcjonalnie) */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            color: #333;
        }

        /* ------------------------ NAVBAR ------------------------ */
        .custom-navbar {
            background-color: #023430; /* ciemna zieleń */
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 2rem;
        }
        .custom-navbar .logo {
            color: #fff;
            font-size: 1.5rem;
            font-weight: 700;
            text-decoration: none;
        }
        .custom-navbar ul {
            list-style: none;
            display: flex;
            gap: 2rem;
        }
        .custom-navbar li {
            display: inline-block;
        }
        .custom-navbar a {
            color: #fff;
            text-decoration: none;
            font-weight: 500;
        }
        .custom-navbar a:hover {
            color: #cfcfcf;
        }
        .icon-buttons {
            display: flex;
            gap: 1.5rem;
        }
        .icon-buttons a {
            color: #fff;
            text-decoration: none;
            font-size: 1.2rem;
        }

        /* ------------------------ HERO SECTION ------------------------ */
        .hero-section {
            position: relative;
            background-color: #0B4D3A; /* tło zbliżone do designu */
            padding: 3rem 2rem;
            overflow: hidden;
        }
        .hero-section .content-wrapper {
            max-width: 1200px;
            margin: 0 auto;
            position: relative;
            z-index: 2;
        }
        /* Lewy slider indicator (1/5) */
        .slide-indicator {
            position: absolute;
            top: 50%;
            left: 2rem;
            transform: translateY(-50%);
            color: #fff;
            font-weight: 600;
            font-size: 1rem;
        }
        .hero-title {
            color: #fff;
            font-size: 3rem;
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 1rem;
        }
        .hero-subtitle {
            color: #fff;
            font-size: 1rem;
            margin-bottom: 2rem;
        }
        .hero-button {
            background-color: #FFA200; /* jaskrawy pomarańczowy */
            border: none;
            color: #fff;
            padding: 0.8rem 1.5rem;
            font-size: 1rem;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
        }
        .hero-button:hover {
            background-color: #ff8c00;
        }
        /* Zdjęcia butów w hero */
        .hero-images {
            position: absolute;
            top: 50%;
            right: 5%;
            transform: translateY(-50%);
            width: 450px; /* dopasuj do potrzeb */
            max-width: 100%;
        }
        .hero-images img {
            width: 100%;
            height: auto;
            display: block;
        }

        /* Strzałka "następny slajd" */
        .next-slide-btn {
            position: absolute;
            top: 50%;
            right: 2rem;
            transform: translateY(-50%);
            font-size: 2rem;
            color: #fff;
            cursor: pointer;
        }

        /* ------------------------ POPULAR PRODUCTS ------------------------ */
        .section {
            max-width: 1200px;
            margin: 0 auto;
            padding: 3rem 2rem;
        }
        .section h2 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }
        .section-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 2rem;
        }
        .section-header a {
            text-decoration: none;
            color: #0B4D3A;
            font-weight: 600;
        }
        .product-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }
        .product-card {
            background-color: #fff;
            border: 1px solid #eee;
            border-radius: 6px;
            padding: 1rem;
            text-align: center;
        }
        .product-card img {
            max-width: 100%;
            height: auto;
            margin-bottom: 1rem;
        }
        .product-name {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        .product-color {
            font-size: 0.9rem;
            color: #777;
            margin-bottom: 0.5rem;
        }
        .product-price {
            font-size: 1rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        .product-rating {
            font-size: 0.9rem;
            color: #FFB400;
            margin-bottom: 1rem;
        }
        .add-to-cart-btn {
            background-color: #0B4D3A;
            color: #fff;
            border: none;
            padding: 0.6rem 1rem;
            font-size: 0.9rem;
            border-radius: 4px;
            cursor: pointer;
        }
        .add-to-cart-btn:hover {
            background-color: #09422f;
        }

        /* ------------------------ BEST SHOES COLLECTION ------------------------ */
        .best-shoes-section {
            background-color: #f8f8f8;
        }

        /* ------------------------ FOOTER (opcjonalnie) ------------------------ */
        .footer {
            background-color: #023430;
            color: #fff;
            text-align: center;
            padding: 2rem;
        }

        @media (max-width: 768px) {
            .hero-title {
                font-size: 2rem;
            }
        }
    </style>
{% endblock %}

